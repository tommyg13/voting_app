<title>Login</title>

<h1 align="center"> Log In to Your Account</h1>
<h3 align="center">or <a href="/register">Register</a></h3>

<div align="center">
  
  {{# if error}}
   <div class="alert alert-danger">
    <p> {{error}}</p>
    </div>
{{/if}} 
  {{# if success}}
  <div class="alert alert-success">
    <p> {{success}}</p>
    </div>
{{/if}} 

{{# if success_msg}}
  <div class="alert alert-success">
    <p> {{success_msg}}</p>
    </div>
{{/if}} 
</div>

<div class="container">  

        <div style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Sign In</div>
                        <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="/forgot">Forgot password?</a></div>
                    </div>   
              <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none"  class="alert alert-danger col-sm-12"></div>
                            
                        <form class="form-horizontal"  method="post">
                                    
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input id="login-username" type="text" class="form-control" name="email" value="" placeholder="email">                                        
                                    </div>
                                
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input id="login-password" type="password" class="form-control" name="password" placeholder="password">
                                    </div>
                         <div style="text-align:center;">
    <button class="btn btn-primary">Sign in</button>
</div>
          </div>
                
      </div>
              
</div>