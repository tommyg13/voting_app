<title>Register</title>
<link rel="stylesheet" href="/stylesheets/register.css" type="text/css" />

<div id="top"class="container" align="center">
  <h1> Create an Account</h1>
  <h4>Already have an account? <a href="login">Login</a></h4>
</div>

<div align="center">
  {{# if error}}
   <div class="alert alert-danger">
    <p> {{error}}</p>
    </div>
{{/if}} 

{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger"><p>{{msg}}</p> </div>
      {{/each}}
{{/if}}
{{# if success}}
  <div class="alert alert-success">
    <p> {{success}}</p>
    </div>
{{/if}} 

{{# if success_msg}}
  <div class="alert alert-success">
    <p> {{success_msg}}</p>
    </div>
{{/if}} 
</div>


  
  <div class="container">  

        <div id="form" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title text-center">Sign up</div>
                    </div>   
              <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none"  class="alert alert-danger col-sm-12"></div>
                            
                        <form class="form-horizontal"  method="post">
                              <input type="hidden", name="_csrf", value="{{csrfToken}}">  
                              
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                         <input  type="text" class="form-control" id="username" name="username"placeholder="Username" >
                                    </div>
                                                          
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                                    </div>
                                
                            
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input id="login-password" type="password" class="form-control" name="password" placeholder="Password" minlength="6"oninvalid="this.setCustomValidity('Password must be at least 6 characters')"
    oninput="setCustomValidity('')" >
                                    </div>
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                         <input type="password" class="form-control" id="password2" name="password2"placeholder="Password confirmation" >
                                    </div>
                         <div style="text-align:center;">
    <button class="btn btn-primary">Register</button>
</div>
</form>
          </div>
                
      </div>
              
</div>
</div>