<title>Password Reset</title>
<style>
@media screen and (max-width: 992px) {
    .panel-default  {
        width: 300px !important;
        margin:0 auto;
    }
    
}
.alert { width:280px !important;}
</style>


 <div class="container" style="padding-top:150px">
   
    <div class="row">
        <div class="row">
          <div class="container" align="center">
          {{# if error}}
   <div class="alert alert-danger">
    <p> {{error}}</p>
    </div>
{{/if}} 
  {{# if success}}
  <div class="alert alert-success">
    <p> {{success}}</p>
    </div>
{{/if}} 

{{# if success_msg}}
  <div class="alert alert-success">
    <p> {{success_msg}}</p>
    </div>
{{/if}} 
</div>
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                  
                    <div class="panel-body">
                        <div class="text-center">
                          <h3><i style="color:black" class="fa fa-lock fa-4x"></i></h3>
                          <h2 style="color:black"class="text-center">Forgot Password?</h2>
                         
                            <div class="panel-body">
                              
                              <form class="form" method="post">
                                
                                <fieldset>
                                  <div class="form-group">
                                    <div class="input-group">
                                      <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                      
                                      <input id="emailInput" placeholder="email address" class="form-control" name="email" type="email"required="">
                                    </div>
                                  </div>
                                  <div class="form-group">
                                    <input class="btn btn-lg btn-primary btn-block" value="Send My Password"  type="submit">
                                  </div>
                                </fieldset>
                              </form>
                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>